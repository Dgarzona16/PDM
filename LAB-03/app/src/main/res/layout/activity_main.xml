<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Title"
        style="@style/TextAppearance.MaterialComponents.Headline4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/gap"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="@dimen/gap"
        android:gravity="center"
        android:text="@string/Title_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/counter"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/counter_txt"
        android:textSize="@dimen/counter_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title" />

    <ImageView
        android:id="@+id/five_cent_img"
        android:layout_width="@dimen/img_size"
        android:layout_height="@dimen/img_size"
        android:layout_marginTop="@dimen/img_gap"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/ten_cents_img"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/counter"
        app:srcCompat="@drawable/five_cents" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/five_cents_txt"
        app:layout_constraintEnd_toEndOf="@+id/five_cent_img"
        app:layout_constraintStart_toStartOf="@+id/five_cent_img"
        app:layout_constraintTop_toBottomOf="@+id/five_cent_img" />

    <ImageView
        android:id="@+id/ten_cents_img"
        android:layout_width="@dimen/img_size"
        android:layout_height="@dimen/img_size"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/five_cent_img"
        app:layout_constraintTop_toTopOf="@+id/five_cent_img"
        app:srcCompat="@drawable/ten_cents" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ten_cents_txt"
        app:layout_constraintEnd_toEndOf="@+id/ten_cents_img"
        app:layout_constraintStart_toStartOf="@+id/ten_cents_img"
        app:layout_constraintTop_toBottomOf="@+id/ten_cents_img" />

    <ImageView
        android:id="@+id/Quarter_img"
        android:layout_width="@dimen/img_size"
        android:layout_height="@dimen/img_size"
        android:layout_marginTop="@dimen/img_gap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dollar_img"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/quarter" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quarter_txt"
        app:layout_constraintEnd_toEndOf="@+id/Quarter_img"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/Quarter_img"
        app:layout_constraintTop_toBottomOf="@+id/Quarter_img" />

    <ImageView
        android:id="@+id/dollar_img"
        android:layout_width="@dimen/img_size"
        android:layout_height="@dimen/img_size"
        app:layout_constraintBottom_toBottomOf="@+id/Quarter_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Quarter_img"
        app:layout_constraintTop_toTopOf="@+id/Quarter_img"
        app:srcCompat="@drawable/one_dollar" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dollar_txt"
        app:layout_constraintEnd_toEndOf="@+id/dollar_img"
        app:layout_constraintStart_toStartOf="@+id/dollar_img"
        app:layout_constraintTop_toBottomOf="@+id/dollar_img" />

</androidx.constraintlayout.widget.ConstraintLayout>